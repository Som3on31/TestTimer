<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:background="#AAD5E6"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".DialogBerryFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/description"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="สะสมแต้มให้ถึงเป้าเพื่อรับน้องเบอร์รีกันเถอะ!"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/mitr"
                android:gravity="center"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:padding="15dp"
                android:text="Tip ! \n\t\t\tผลไม้จําพวกเบอร์รีเป็นผลไม้บํารุงสายตา อุดมไปด้วยวิตามินซี วิตามินเอ รวมถึงสารต้านอนุมูลอิสระ"
                android:textSize="15dp"
                android:textColor="#DA0C52"
                android:fontFamily="@font/mitr"
                app:layout_constraintTop_toBottomOf="@id/layout_berry3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <LinearLayout
                android:id="@+id/layout_berry1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_rect"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/description">

                <ImageView
                    android:id="@+id/berry1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/berry1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/berry1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mitr"
                        android:text="@string/berry1"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/berry1_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/mitr"
                        android:text="เมื่อลงทะเบียนใช้แอปพลิเคชัน Digital Eyestrain Relief (ER)"
                        android:textSize="15dp"
                        android:textColor="#1C1C1C" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_berry2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_rect"
                android:gravity="center_vertical"

                app:layout_constraintTop_toBottomOf="@id/layout_berry1">

                <ImageView
                    android:id="@+id/berry2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/berry2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/berry2_name"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mitr"
                        android:text="@string/berry2"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/berry2_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/mitr"
                        android:text="เมื่อมียอดสะสมแต้มได้ครบ 150"
                        android:textSize="15dp"
                        android:textColor="#1C1C1C" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_berry3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_rect"
                android:gravity="center_vertical"

                app:layout_constraintTop_toBottomOf="@id/layout_berry2">

                <ImageView
                    android:id="@+id/berry3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/berry3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/berry3_name"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mitr"
                        android:text="@string/berry3"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/berry3_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/mitr"
                        android:text="เมื่อมียอดสะสมแต้มได้ครบ 350"
                        android:textSize="15dp"
                        android:textColor="#1C1C1C" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>








</androidx.constraintlayout.widget.ConstraintLayout>